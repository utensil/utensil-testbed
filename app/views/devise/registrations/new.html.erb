<% title t("authentications.sign_up") %>

<% if session[:omniauth] -%>
  <%= t("authentications.fullfill_to_sign_up", :kind => t("auth_provider.#{session[:omniauth]['provider']}")) %>
<% end =%>

<div class='span-14 prepend-12 append-12 last'>
  <h2><%= t("authentications.sign_up") %></h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  
    <p><%= f.label :email %><br />
    <%= f.email_field :email %></p>
  
    <p><%= f.label :password %><br />
    <%= f.password_field :password %></p>
  
    <p><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %></p>
  
    <p><%= f.submit t("authentications.sign_up") %></p>
  <% end %>
  <%= render :partial => "layouts/auth_nav" %>
  <%= render :partial => "devise/shared/links" %>
</div>
