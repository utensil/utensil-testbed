<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? "心水志-#{yield(:title)}" : "心水志" %></title>
    <%= stylesheet_link_tag 'blueprint/screen', 'application' %>     
    <!--[if lt IE 8]><%= stylesheet_link_tag 'blueprint/ie' %> <![endif]-->
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container" class="container">
      <div class='span-3'>
        <h1><%= link_to image_tag("/images/banner_512x221.png", 
       :size => '128x55', :alt => '心水志'), '/' %></h1>
      </div>
      <%= render :partial => "layouts/user_nav" %>
      <hr class='space' />
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :class => { :alert => 'error', :notice => 'notice'}[name] || name %>
      <% end %>
<!--       <%= content_tag :h1, yield(:title) if show_title? %> -->
      <%= yield %>
    </div>
  </body>
</html>
